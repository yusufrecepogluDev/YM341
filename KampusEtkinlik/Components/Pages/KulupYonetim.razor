    // Resim seçme metodları
    private async Task OnImageSelected(InputFileChangeEventArgs e)
    {
        try
        {
            selectedImageFile = e.File;

            if (selectedImageFile != null)
            {
                // Dosya boyutu kontrolü (2MB önizleme için)
                if (selectedImageFile.Size > 2 * 1024 * 1024)
                {
                    // Büyük dosyalar için önizleme gösterme
                    selectedImagePreview = null;
                    mesaj = "📷 Resim seçildi (önizleme büyük dosyalar için devre dışı)";
                }
                else
                {
                    // Önizleme için base64'e çevir
                    using var stream = selectedImageFile.OpenReadStream(maxAllowedSize: 2 * 1024 * 1024);
                    using var memoryStream = new MemoryStream();
                    await stream.CopyToAsync(memoryStream);
                    var base64 = Convert.ToBase64String(memoryStream.ToArray());
                    var contentType = selectedImageFile.ContentType;
                    selectedImagePreview = $"data:{contentType};base64,{base64}";
                }
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            mesaj = $"❌ Resim seçme hatası: {ex.Message}";
            selectedImageFile = null;
            selectedImagePreview = null;
            StateHasChanged();
        }
    }

